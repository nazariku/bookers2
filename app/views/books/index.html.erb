<html>
  <body>
    <main>
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
    
        <tbody>
          <% @book.each do |book| %>
            <tr>
              <td><%= image_tag 'no_image.jpg' %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </main>
  </body>
</html>