<html><!--user/show/から飛べる-->
  <body>
    <main>
      <div>
        <h2>Book detail</h2>
        <table>
          <tbody>
            <tr>
              <td>
                <%= image_tag @book.user.get_profile_image(50,50) %>
                <%= @book.user.name %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path(@book) %></td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", @book, method: :delete %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </main>
  </body>
</html>