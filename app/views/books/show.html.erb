<html><!--user/show/から飛べる-->
  <body>
    <main>
      <p id="notice"><%= flash[:notice] %></p>
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <%= render 'users/shared', user: @user %>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
              <tbody>
                <tr>
                  <td>
                    <%= image_tag @book.user.get_profile_image(100,100) %>
                    <br><%= link_to @book.user.name, user_path(@book.user) %>
                  </td>
                  <td><%= link_to @book.title, book_path(@book) %></td>
                  <td><%= @book.body %></td>
                  <td>
                    <% if @book.user == current_user %>
                      <%= link_to edit_book_path(@book), class:"btn btn-success btn-sm", method: :get do %>
                        <div>Edit</div>
                      <% end %>
                      <% else %>
                    <% end %>
                  </td>
                  <td>
                    <% if @book.user == current_user %>
                      <%= link_to "Destroy", book_path(@book), class:"btn btn-danger btn-sm", method: :delete %>
                    <% end %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>