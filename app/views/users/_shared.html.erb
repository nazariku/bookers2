<html><!--左上テンプレート-->
  <body>
    <h2>User info</h2>
      <%= image_tag user.get_profile_image(100, 100) %>
    <div>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block edit_user", method: :get do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
    </div>
    
    
    <h2 class="mt-3">New book</h2>
    <%= form_with model: Book.new do |f| %>

      <div class="form-group">
        <label for='book_title'>Title</label>
        <br><%= f.text_field :title %>
      </div>

      <div class="form-group">
        <label for='book_opinion'>Opinion</label>
        <br><%= f.text_area :body %>
      </div>

      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      </div>

    <% end %>
  </body>
</html>