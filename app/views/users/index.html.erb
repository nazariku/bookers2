<html><!--user一覧 -->
  <body>
    <main>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">

            <%= render 'users/shared', user: current_user %>

        </div>
       <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= image_tag user.get_profile_image(50,50) %></td>

              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
      </div>
      </div>
    </main>
  </body>
</html>