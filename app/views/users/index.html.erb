<html><!--user一覧 -->
  <body>
    <main>
      <div>
        <div>
          <%= render 'users/shared', user: current_user %>
        </div>
        <div>
          <%= render 'books/new', books: @book %>
        </div>
        <h2>Users</h2>
        <table>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= image_tag user.get_profile_image(50,50) %></td>

              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </main>
  </body>
</html>