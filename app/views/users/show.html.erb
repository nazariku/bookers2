<!--特定のユーザーの（id）投稿一覧sign_upのリダイレクト先-->
<html>
  <body>
    <main>
      <p id="notice"><%= flash[:notice] %></p>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <%= render 'users/shared', user: current_user %>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <td>
                      <%= link_to book_path(book.id) do %>
                        <%= image_tag book.user.get_profile_image(50,50) %>
                      <% end %>
                    </td>

                    <td>
                      <span>
                        <%= link_to book.title, book_path(book.id) %>
                      </span>
                    </td>
                    <td><%= book.body %></td>
                    <td></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>